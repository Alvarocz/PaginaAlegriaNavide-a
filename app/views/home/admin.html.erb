<section id="administracion">
  <div class="container" style="background-color: rgba(255, 255, 255, .75);">
    <div class="row">
      <div class="col-xs-12">
        <h2>Aministración</h2>
        
        <% if not user_signed_in? %>
          <div class="form-group">
            <%= link_to 'Iniciar sesión', new_user_session_path, class: "btn btn-lg btn-primary" %>
          </div>
          <div class="form-group">
            <%= link_to 'Registro', new_user_registration_path, class: "btn btn-lg btn-primary" %>
          </div>
        <% else %>
          <p>Ya has iniciado sesión de administrador</p>
        <% end %>
      </div>
    </div>
  </div>
</section>