<header>
  <div class="container">
    <div class="intro-text">
      <div class="intro-lead-in">Presentaciones</div>
    </div>
  </div>
</header>
<section id="presentaciones">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <% if @presentations != [] %>
          <div class="text-center"><h2>Proximamente en</h2></div>
          <% @presentations.each do |presentation| %>
            <div class="page-header">
              <h1>Presentaci√≥n en <%= presentation.site %></h1>
              <% f = presentation.datetime %>
              <p><%= f.strftime("%A ")+f.day.to_s+" de "+f.strftime('%B')+" del "+f.strftime('%Y') %></p>
              <p><%= f.strftime('%H:%M %p') %></p>
            </div>
          <% end %>
        <% else %>
          <p>Lo sentimos, por ahora no hay presentaciones pendientes.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>
