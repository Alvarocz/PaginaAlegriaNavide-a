<header>
  <div class="contanier">
    <div class="intro-text">
      <div class="intro-lead-in">Videos</div>
    </div>
  </div>
</header>

<section id="videos">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <% if @videos != [] %>
          <% @videos.each do |video| -%>
            <div class="page-header">
              <h3><%= video.title %></h3>
            </div>
            <div class="page-content">
              <div class="embed-container">
                <%= embed(video.route) %>
              </div>
            </div>
            <% if user_signed_in? %>
              <%= link_to 'Editar', edit_video_path(video), class: "btn btn-md btn-primary" %>
              <%= link_to 'Eliminar', video, method: :delete, data: { confirm: "Â¿Estas segur@?" }, class: "btn btn-md btn-primary" %>
            <% end %>
          <% end %>
        <% else %>
          <p>Lo sentimos, aun no hay videos disponibles.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>
